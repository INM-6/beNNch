<jube>
  <parameterset name="dir_config">

    <!-- Parameters/paths below should not need to be modified -->
    <parameter name="bench_home" type="string">${base_path}/nest-benchmarks/Benchmarks</parameter>
    <parameter name="bench_work" type="string">${base_path}/BenchWork</parameter>
    <parameter name="bench_model" type="string">${base_path}/nest-benchmarks/BenchModels</parameter>

    <parameter name="NEST_INSTALL_DIR" type="string">${bench_work}/${nest_version}-${system_name}-${nest_config}/install</parameter>
    <parameter name="NEST_BUILD_DIR" type="string">${bench_work}/jube_builds/${nest_version}/${system_name}-${nest_config}</parameter>
    <parameter name="NEST_SRC_DIR" type="string">${bench_work}/${nest_version}/src</parameter>

    <!-- Jemalloc cannot be built out-of-tree, thus no BUILD -->
    <parameter name="JEMALLOC_INSTALL_DIR" type="string">${bench_work}/${jemalloc_version}-${system_name}/install</parameter>
    <parameter name="JEMALLOC_SRC_DIR" type="string">${bench_work}/${jemalloc_version}</parameter>

    <parameter name="VALGRIND_INSTALL_DIR" type="string">${bench_work}/${valgrind_version}-${system_name}/install</parameter>
    <parameter name="VALGRIND_SRC_DIR" type="string">${bench_work}/${valgrind_version}</parameter>

  </parameterset>
</jube>
